<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.VkClient"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />
<uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
        <uses-permission android:name="android.permission.INTERNET" />
        <activity
            android:theme="@style/MyTheme"
            android:name="com.example.android_vk_client.MainActivity"
            android:label="@string/app_name" 
        >
            <intent-filter>
                   <action android:name="android.intent.action.MAIN" />
                   
            </intent-filter>
        </activity>
         <activity
            android:name="com.example.android_vk_client.Friends"

            android:label="@string/app_name" 
            android:theme="@style/MyTheme">
             
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                 
                 
            </intent-filter>
        </activity>
         <activity
            android:theme="@style/MyTheme"
            android:name="com.example.android_vk_client.Profile"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                
            </intent-filter>
        </activity>
         <activity
            android:theme="@style/MyTheme"
            android:name="com.example.android_vk_client.Dialogs"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                 
            </intent-filter>
        </activity>
        <activity
            android:theme="@style/MyTheme"
            android:name="com.example.android_vk_client.Message"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
               
            </intent-filter>
        </activity>
          <activity
            android:theme="@style/MyTheme"
            android:name="com.example.android_vk_client.Authorization"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" /> 
            </intent-filter>
        </activity>
        <activity
                android:theme="@style/MyTheme"
                android:name="com.example.android_vk_client.Group"
                android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
    </application>

</manifest>