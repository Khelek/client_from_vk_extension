<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEE"
    android:gravity="top"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    android:scrollbarStyle="insideOverlay"
    android:scrollbars="vertical"
    tools:context=".MainActivity" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/linearLayout2"
        android:layout_alignParentRight="true"
        android:background="#333" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/imageView2"
            android:layout_marginRight="22dp"
            android:clickable="true"
            android:onClick="sendMess"
            android:text="Отправить  \nсообщение"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#fff"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="40px"
            android:layout_height="40px"
            android:layout_alignTop="@+id/button1"
            android:layout_toLeftOf="@+id/textView2"
            android:src="@drawable/mess" />

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/button2"
            android:layout_below="@+id/textView3"
            android:background="#00ffffff" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/imageView3"
            android:layout_below="@+id/imageView3"
            android:background="#00ffffff" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="40px"
            android:layout_height="40px"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="28dp"
            android:layout_toLeftOf="@+id/textView3"
            android:src="@drawable/remove" />

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_above="@+id/imageView3"
            android:layout_alignRight="@+id/textView2"
            android:layout_toRightOf="@+id/imageView2"
            android:background="#11ffffff"
            android:onClick="sendMess" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView2"
            android:layout_alignLeft="@+id/textView2"
            android:text="Online *"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#47cfe8" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView3"
            android:layout_toRightOf="@+id/imageView2"
            android:text="Удалить\n из друзей"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#fff"
            android:textSize="14sp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="3px"
        android:layout_alignLeft="@+id/linearLayout1"
        android:layout_alignRight="@+id/linearLayout1"
        android:layout_below="@+id/linearLayout1"
        android:background="#00cce4"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="#fff"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/ic_launcher" />

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_marginTop="-40px"
            android:layout_width="150dp"
            android:layout_height="40px"
            android:background="#80000000"
            android:visibility="visible" >

            <TextView
                android:id="@+id/idProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="27dp"
                android:text="id1121312"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#fff"
                android:textSize="14dp" />
        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20px"
        android:text="статус:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#008c9d"
        android:textSize="12sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView7"
        android:layout_marginRight="10px"
        android:layout_marginTop="16dp"
        android:background="#00cce4" >
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/city"
        android:layout_marginRight="10px"
        android:layout_marginTop="16dp"
        android:background="#00cce4" >
    </RelativeLayout>

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView9"
        android:layout_below="@+id/city"
        android:layout_marginTop="28dp"
        android:text="Семейное положение:"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#008c9d"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/nameProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView5"
        android:layout_alignLeft="@+id/textView5"
        android:layout_marginLeft="15dp"
        android:text="xfgbxfdg"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#333" />

    <TextView
        android:id="@+id/statusProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:text="Я пафосный пафосный статус"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#555"
        android:textSize="14sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#00cce4" >
    </RelativeLayout>

    <TextView
        android:id="@+id/relation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/nameProfile"
        android:layout_below="@+id/textView11"
        android:text="zczxc"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#444" />

    <TextView
        android:id="@+id/city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/relation"
        android:layout_below="@+id/textView9"
        android:text="Мухосранск"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#444" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/city"
        android:layout_below="@+id/textView8"
        android:text="11.09.1989"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#444" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView5"
        android:layout_below="@+id/statusProfile"
        android:layout_marginTop="16dp"
        android:text="день рождения:"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#008c9d"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView8"
        android:layout_below="@+id/textView7"
        android:layout_marginTop="31dp"
        android:text="Родной город:"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#008c9d"
        android:textSize="12sp" />
    <ImageView
        android:id="@+id/sex"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/nameProfile"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/nameProfile"
        android:layout_toLeftOf="@+id/textView7"
        android:src="@drawable/ic_launcher" />
        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_above="@+id/textView8"
        android:layout_alignLeft="@+id/textView8"
        android:background="#00cce4" 
        android:layout_marginRight="10px">
    </RelativeLayout>
</RelativeLayout>